<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".OptionDialogFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Pilih Pelatih favorit anda :" />

    <RadioGroup
        android:id="@+id/rg_coach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/rb_ca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carlo Ancelotti" />
        <RadioButton
            android:id="@+id/rb_jm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jose Mourinho" />
        <RadioButton
            android:id="@+id/rb_jg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Josep Guardiola" />
        <RadioButton
            android:id="@+id/rb_bp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bob Paisley" />
        <RadioButton
            android:id="@+id/rb_af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alex Ferguson" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_close"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="00.5"
            android:text="Close" />
        <Button
            android:id="@+id/btn_choose"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Choose" />


    </LinearLayout>


</LinearLayout>